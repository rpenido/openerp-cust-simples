<?xml version="1.0" encoding="utf-8"?>
<openerp>
        <data>
		<record model="ir.ui.view" id="view_l10n_br_base_partner_filter_simples">
                        <field name="name">l10n_br_base.partner.filter.simples</field>
                        <field name="model">res.partner</field>
                        <field name="inherit_id" ref="l10n_br_base.view_l10n_br_base_partner_filter" />
                        <field name="arch" type="xml">
                                <field name="name" position="before">
                                        <field name="code" />
                                </field>
                        </field>
                </record>


		<record id="view_partner_tree_simples" model="ir.ui.view">
			<field name="name">res.partner.tree</field>
			<field name="model">res.partner</field>
			<field name="type">tree</field>
			<field name="inherit_id" ref="l10n_br_base.view_l10n_br_base_partner_tree"/>
			<field name="arch" type="xml">
				<xpath expr="/tree[@string='Contacts']" position="attributes">
					<attribute name="colors">green:orders_last_week>=0.10;blue:orders_last_week>0;red:orders_last_week==0</attribute>
				</xpath>
				<field name="name" position="before">
					<!--field name="visit_order" /-->
					<field name="code" />
				</field>
				<field name="name" position="after">
					<field name="street" />
				</field>
				<field name="inscr_est" position="attributes">
					<attribute name="invisible">True</attribute>
				</field>
				<field name='email'  position="attributes">
					<attribute name="invisible">True</attribute>
				</field>

				<field name="is_company" position="after">
					<field name="visit_order" />
					<field name="orders_last_week" invisible="0"/>
				</field>
			</field>
		</record>
	</data>
</openerp>
